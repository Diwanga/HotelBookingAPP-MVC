@model List<HotelBookingAPP.Models.Booking>
@{
    ViewBag.Title = "Bookings";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Bookings</h2>
    <div>
        <a class="btn btn-primary" href="/Booking/Create">Add Booking</a>
        <a class="btn btn-secondary" href="/Booking/WeeklyReport">Weekly Report</a>
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Guest</th>
        <th>Room</th>
        <th>Check-In</th>
        <th>Check-Out</th>
        <th>Total Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.Id</td>
            <td>@booking.GuestName</td>
            <td>@booking.Room?.RoomType</td>
            <td>@booking.CheckIn.ToShortDateString()</td>
            <td>@booking.CheckOut.ToShortDateString()</td>
            <td>Rs. @booking.TotalPrice</td>
            <td>
                <a class="btn btn-sm btn-info" href="/Booking/Details/@booking.Id">Details</a>
                <a class="btn btn-sm btn-warning" href="/Booking/Edit/@booking.Id">Edit</a>
                <a class="btn btn-sm btn-danger" href="/Booking/Delete/@booking.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>