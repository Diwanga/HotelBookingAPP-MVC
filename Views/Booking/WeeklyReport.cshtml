@model Dictionary<string, List<HotelBookingAPP.Models.Booking>>
<h2>Weekly Booking Report</h2>
<div class="row">
    @foreach (var day in Model.Keys)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    @day
                </div>
                <div class="card-body">
                    @if (Model[day].Any())
                    {
                        <table class="table table-sm table-bordered">
                            <thead>
                            <tr>
                                <th>Guest</th>
                                <th>Room</th>
                                <th>Check-In</th>
                                <th>Check-Out</th>
                                <th>Price</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var booking in Model[day])
                            {
                                <tr>
                                    <td>@booking.GuestName</td>
                                    <td>@booking.Room?.RoomType</td>
                                    <td>@booking.CheckIn.ToShortDateString()</td>
                                    <td>@booking.CheckOut.ToShortDateString()</td>
                                    <td>Rs. @booking.TotalPrice</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No bookings for this day.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>
<a href="/Booking" class="btn btn-secondary">Back to Bookings</a>